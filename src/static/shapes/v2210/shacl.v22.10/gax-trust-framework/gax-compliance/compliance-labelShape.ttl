gax-validation:ComplianceLabelShape
	a sh:NodeShape ;
	sh:targetClass gax-trust-framework:ComplianceLabel ;
	sh:property [ sh:path gax-trust-framework:hasName ;
				  sh:name "has name" ;
				  sh:description "Name of the Gaia-X Label" ;
				  skos:example "'Gaia-X GDPR Trusted Label'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path dct:hasDescription ;
				  sh:name "has description" ;
				  sh:description "A description in natural language of the Gaia-X Label as defined in TF document" ;
				  skos:example "'Gaia-X'" ;
				  sh:order 2 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:hasLevel ;
				  sh:name "has level" ;
				  sh:description "A description in natural language of the Gaia-X Label Level as defined in TF document" ;
				  skos:example "'1', '2', '3'" ;
				  sh:order 3 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:hasRequiredCriteriaCombinations ;
				  sh:name "has required criteria combinations" ;
				  sh:description "List of Criteria Combinations. If one of these Combinations is valid the Label is Granted" ;
				  skos:example "'1', '2', '3'" ;
				  sh:order 4 ;
				  sh:minCount 1 ;
				  sh:nodeKind sh:IRI ] ;
.
