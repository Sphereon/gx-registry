gax-validation:LegalPersonShape
	a sh:NodeShape ;
	sh:targetClass gax-trust-framework:LegalPerson ;
	sh:property [ sh:path gax-trust-framework:legalName ;
				  sh:name "legal name" ;
				  sh:description "Legally binding name" ;
				  skos:example "'ACME'" ;
				  sh:order 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:legalForm ;
				  sh:name "legal form" ;
				  sh:description "Legal form" ;
				  skos:example "'L.L.C, GmbH'" ;
				  sh:order 2 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:description ;
				  sh:name "description" ;
				  sh:description "Textual description of this organization." ;
				  skos:example "'A company making everything'" ;
				  sh:order 3 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:registrationNumber ;
				  sh:name "registration number" ;
				  sh:description "Countryâ€™s registration number which identifies one specific entity. Valid formats are local, EUID, EORI, vatID, leiCode." ;
				  skos:example "'DEU1234.HRB12345'" ;
				  sh:order 4 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:legalAddress ;
				  sh:name "legal address" ;
				  sh:description "The full legal address of the organization." ;
				  skos:example "'(a structured object which has the attribute country as mandatory attribute and some other optional attributes e.g., the attributes vcard:street-address,vcard:locality and vcard:country-name)'" ;
				  sh:order 5 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:node gax-validation:AddressShape ] ;
	sh:property [ sh:path gax-trust-framework:headquarterAddress ;
				  sh:name "headquarter address" ;
				  sh:description "The full legal address of the organization." ;
				  skos:example "'(a structured object which has the attribute country as mandatory attribute and some other optional attributes e.g., the attributes vcard:street-address,vcard:locality and vcard:country-name)'" ;
				  sh:order 6 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:node gax-validation:AddressShape ] ;
	sh:property [ sh:path gax-trust-framework:leiCode ;
				  sh:name "lei code" ;
				  sh:description "Unique LEI number as defined by https://www.gleif.org." ;
				  skos:example "'M07J9MTYHFCSVRBV2631'" ;
				  sh:order 7 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:parentOrganization ;
				  sh:name "parent organization" ;
				  sh:description "A list of direct participant that this entity is a subOrganization of, if any." ;
				  skos:example "'https://gaia-x.eu'" ;
				  sh:order 8 ;
				  sh:nodeKind sh:IRI ] ;
	sh:property [ sh:path gax-trust-framework:subOrganization ;
				  sh:name "sub organization" ;
				  sh:description "A list of direct participant with an legal mandate on this entity, e.g., as a subsidiary." ;
				  skos:example "'https://gaia-x.eu'" ;
				  sh:order 9 ;
				  sh:nodeKind sh:IRI ] ;
.

gax-validation:AddressShape
	a sh:NodeShape ;
	sh:targetClass vcard:Address ;
	sh:property [ sh:path vcard:country-name ;
				  sh:name "country-name" ;
				  sh:description "Physical location of head quarter in ISO 3166-1 alpha2, alpha-3 or numeric format." ;
				  skos:example "'DE', 'DEU'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path vcard:gps ;
				  sh:name "gps" ;
				  sh:description "GPS in ISO 6709:2008/Cor 1:2009 format." ;
				  skos:example "'DE', 'DEU'" ;
				  sh:order 2 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path vcard:street-address ;
				  sh:name "street-address" ;
				  sh:description "The v:street-address property specifies the street address of a postal address." ;
				  skos:example "'example-street'" ;
				  sh:order 3 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path vcard:postal-code ;
				  sh:name "postal-code" ;
				  sh:description "String of a street-address" ;
				  skos:example "'example-postal-code'" ;
				  sh:order 4 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path vcard:locality ;
				  sh:name "locality" ;
				  sh:description "The v:locality property specifies the locality (e.g., city) of a postal address." ;
				  skos:example "'example-locality'" ;
				  sh:order 5 ;
				  sh:datatype xsd:string ] ;
.
