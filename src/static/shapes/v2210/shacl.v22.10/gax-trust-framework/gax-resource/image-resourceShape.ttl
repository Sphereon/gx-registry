@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix gax-validation:  <{{BASE_URI}}/validation#> .

@prefix gax-trust-framework: <{{BASE_URI}}/gax-trust-framework#> .
@prefix vcard: <https://www.w3.org/2006/vcard/ns#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .
@prefix did: <https://www.w3.org/TR/did-core/#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix gax-core: <{{BASE_URI}}/core#> .
@prefix cc: <http://creativecommons.org/ns#> .
@prefix ids: <https://w3id.org/idsa/core/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix vann: <http://purl.org/vocab/vann/> .
@prefix voaf: <http://purl.org/vocommons/voaf#> .
@prefix void: <http://rdfs.org/ns/void#> .
@prefix schema: <http://schema.org/> .

gax-validation:ImageShape
	a sh:NodeShape ;
	sh:targetClass gax-trust-framework:Image ;
	sh:property [ sh:path gax-trust-framework:imageType ;
				  sh:name "image type" ;
				  sh:description "Type of this image. Default: virtual machine" ;
				  skos:example "'virtual machine', 'container'" ;
				  sh:order 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:size ;
				  sh:name "size" ;
				  sh:description "Size of this image " ;
				  skos:example "'(a structured object of type gax-core:Measure)'" ;
				  sh:order 2 ;
				  sh:maxCount 1 ;
				  sh:node gax-validation:MeasureShape ] ;
	sh:property [ sh:path gax-trust-framework:minRamSize ;
				  sh:name "min ram size" ;
				  sh:description "Mininal size of ram required to instantiate this image." ;
				  skos:example "'(a structured object of type gax-core:Measure)'" ;
				  sh:order 3 ;
				  sh:maxCount 1 ;
				  sh:node gax-validation:MeasureShape ] ;
	sh:property [ sh:path gax-trust-framework:diskFormat ;
				  sh:name "disk format" ;
				  sh:description "Disk format. Default: RAW" ;
				  skos:example "'RAW'" ;
				  sh:order 4 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:containerFormat ;
				  sh:name "container format" ;
				  sh:description "Container format. Default: BARE" ;
				  skos:example "'BARE'" ;
				  sh:order 5 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:checkSum ;
				  sh:name "check sum" ;
				  sh:description "Checksum of this image." ;
				  skos:example "'5d68f20237c7c01c067b577ee5e490d1'" ;
				  sh:order 6 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:version ;
				  sh:name "version" ;
				  sh:description "Version of this image." ;
				  skos:example "'8'" ;
				  sh:order 7 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:architecture ;
				  sh:name "architecture" ;
				  sh:description "CPU Architecture required to instantiate this image." ;
				  skos:example "'x86_64', 'arm', 'ppc64.8'" ;
				  sh:order 8 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:copyrightOwnedBy ;
				  sh:name "copyright owned by" ;
				  sh:description "The copyright owner(s), given as a Gaia-X Participant or as some other agent, possibly also a person outside of Gaia-X. A copyright owner is a person or organization, that has the right to exploit the resource. Copyright owner does not necessary refer to the author of the resource, who is a natural person and may differ from copyright owner. A simple name string can be referenced as a blank node whose foaf:name attribute has that string value." ;
				  skos:example "'https://gaia-x.eu'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:node gax-validation:AgentShape ] ;
	sh:property [ sh:path gax-trust-framework:license ;
				  sh:name "license" ;
				  sh:description "A list of SPDX license identifiers or URL to license document" ;
				  skos:example "'https://gaia-x.eu'" ;
				  sh:order 2 ;
				  sh:minCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:policy ;
				  sh:name "policy" ;
				  sh:description "A list of policy expressed using a DSL (e.g., Rego or ODRL) (access control, throttling, usage, retention, â€¦)" ;
				  skos:example "'https://gaia-x.eu'" ;
				  sh:order 3 ;
				  sh:minCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:name ;
				  sh:name "name" ;
				  sh:description "Name of resource." ;
				  skos:example "'Example Resource'" ;
				  sh:order 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path dct:description ;
				  sh:name "description" ;
				  sh:description "A more detailed description of resource." ;
				  skos:example "'Example Resource placed somewhere in Europe'" ;
				  sh:order 2 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path gax-trust-framework:aggregationOf ;
				  sh:name "aggregation of" ;
				  sh:description "Resources related to the resource and that can exist independently of it." ;
				  skos:example "'(a reference to gax-trust-framework:Resource object)'" ;
				  sh:order 3 ;
				  sh:nodeKind sh:IRI ] ;
	sh:property [ sh:path gax-core:aggregationOf ;
				  sh:name "aggregation of" ;
				  sh:description "DID of resources self-description related to the resource and that can exist independently of it." ;
				  skos:example "''" ;
				  sh:order 1 ;
				  sh:nodeKind sh:IRI ] ;
	sh:property [ sh:path gax-core:operatedBy ;
				  sh:name "operated by" ;
				  sh:description "DID of resources self-description related to the resource and that can exist independently of it." ;
				  skos:example "'https://gaia-x.eu'" ;
				  sh:order 2 ;
				  sh:nodeKind sh:IRI ] ;
.

gax-validation:MeasureShape
	a sh:NodeShape ;
	sh:targetClass gax-trust-framework:Measure ;
	sh:property [ sh:path gax-trust-framework:value ;
				  sh:name "value" ;
				  sh:description "The value of this measurement." ;
				  skos:example "'100'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:float ] ;
	sh:property [ sh:path gax-trust-framework:unit ;
				  sh:name "unit" ;
				  sh:description "The unit of this measurement" ;
				  skos:example "'Gbps', 'Euro'" ;
				  sh:order 2 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
.

gax-validation:AgentShape
	a sh:NodeShape ;
	sh:targetClass foaf:Agent ;
	sh:property [ sh:path foaf:name ;
				  sh:name "name" ;
				  sh:description "A name for some thing. Use vcard:Agent and its more comprehensive naming facilities when you need more expressiveness." ;
				  skos:example "'example-name'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
.
