gax-validation:DataCentreShape
	a sh:NodeShape ;
	sh:targetClass trusted-cloud:DataCentre ;
	sh:property [ sh:path trusted-cloud:owner ;
				  sh:name "owner" ;
				  sh:description "Legal information of datacenter subcontractor." ;
				  skos:example "''" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:nodeKind sh:IRI ] ;
	sh:property [ sh:path trusted-cloud:geoLocation ;
				  sh:name "geo location" ;
				  sh:description "Geographical location of dat centre." ;
				  skos:example "''" ;
				  sh:order 2 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:node gax-validation:LocationShape ] ;
	sh:property [ sh:path gax-core:aggregationOf ;
				  sh:name "aggregation of" ;
				  sh:description "DID of resources self-description related to the resource and that can exist independently of it." ;
				  skos:example "''" ;
				  sh:order 1 ;
				  sh:nodeKind sh:IRI ] ;
	sh:property [ sh:path gax-core:operatedBy ;
				  sh:name "operated by" ;
				  sh:description "DID of resources self-description related to the resource and that can exist independently of it." ;
				  skos:example "'https://gaia-x.eu'" ;
				  sh:order 2 ;
				  sh:nodeKind sh:IRI ] ;
.

gax-validation:LocationShape
	a sh:NodeShape ;
	sh:targetClass trusted-cloud:Location ;
	sh:property [ sh:path trusted-cloud:country-name ;
				  sh:name "country-name" ;
				  sh:description "Country data centre is located in." ;
				  skos:example "'DE', 'DEU'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path trusted-cloud:state ;
				  sh:name "state" ;
				  sh:description "State data centre is located in." ;
				  skos:example "'Saxony'" ;
				  sh:order 2 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
.
