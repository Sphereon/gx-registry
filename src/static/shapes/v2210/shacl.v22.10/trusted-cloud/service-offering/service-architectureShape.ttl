gax-validation:ServiceArchitectureShape
	a sh:NodeShape ;
	sh:targetClass trusted-cloud:ServiceArchitecture ;
	sh:property [ sh:path trusted-cloud:clientIsolation ;
				  sh:name "client isolation" ;
				  sh:description "Description of measures for limiting client areas for dedicated technical infrastructures and data areas." ;
				  skos:example "'(a structured object of type ClientIsolation)'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:node gax-validation:ClientIsolationShape ] ;
	sh:property [ sh:path trusted-cloud:scaling ;
				  sh:name "scaling" ;
				  sh:description "Information about scaling possibilities of techical infrastructure of the service." ;
				  skos:example "'(a structured object of typr ServiceScaling)'" ;
				  sh:order 2 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:node gax-validation:ServiceScallingShape ] ;
.

gax-validation:ClientIsolationShape
	a sh:NodeShape ;
	sh:targetClass trusted-cloud:ClientIsolation ;
	sh:property [ sh:path trusted-cloud:clientSeparation ;
				  sh:name "client separation" ;
				  sh:description "Is a continuous client separation guaranteed?" ;
				  skos:example "'No statement', 'Not guaranteed', 'Guaranteed', 'Guaranteed and can be proven'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path trusted-cloud:description ;
				  sh:name "description" ;
				  sh:description "How does the client separation work?" ;
				  skos:example "'Freetext'" ;
				  sh:order 2 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
.
