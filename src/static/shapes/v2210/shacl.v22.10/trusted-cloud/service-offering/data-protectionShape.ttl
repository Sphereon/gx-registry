gax-validation:DataProtectionShape
	a sh:NodeShape ;
	sh:targetClass trusted-cloud:DataProtection ;
	sh:property [ sh:path trusted-cloud:gdprMeasures ;
				  sh:name "gdpr measures" ;
				  sh:description "Information about technical and organizational measures for GDPR." ;
				  skos:example "'(a structured object of tpe GpdrMeasures)'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:node gax-validation:GdprMeasuresShape ] ;
	sh:property [ sh:path trusted-cloud:gdprCompliance ;
				  sh:name "gdpr compliance" ;
				  sh:description "Information of compliance of European General Data Protection Regulation (GDPR)" ;
				  skos:example "'(a structured object of type GdprCompliance)'" ;
				  sh:order 2 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:node gax-validation:GdprComplianceShape ] ;
	sh:property [ sh:path trusted-cloud:dataRetention ;
				  sh:name "data retention" ;
				  sh:description "Information about limitation of customer data to specific regions" ;
				  skos:example "'a structured object of type DataRetention)'" ;
				  sh:order 3 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:node gax-validation:DataRetentionShape ] ;
	sh:property [ sh:path trusted-cloud:dataSubjectRights ;
				  sh:name "data subject rights" ;
				  sh:description "Details on the implementation of the data subject rigths in accordance with Art. 12-23 GDPR?" ;
				  skos:example "'/a structured object of type DataSubjectRights)'" ;
				  sh:order 4 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:node gax-validation:DataSubjectRightsShape ] ;
	sh:property [ sh:path trusted-cloud:employeesCommitment ;
				  sh:name "employees commitment" ;
				  sh:description "Is the oblication of all persons authorizied to process personal data to be subject to data secrecy according to Art. 28 (3) sentence 2 lit. b, 29, 32 para. 4 GDPR contractually defined??" ;
				  skos:example "'yes', 'no'" ;
				  sh:order 5 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:boolean ] ;
.

gax-validation:DataRetentionShape
	a sh:NodeShape ;
	sh:targetClass trusted-cloud:DataRetention ;
	sh:property [ sh:path trusted-cloud:customDataHostingRestrictable ;
				  sh:name "custom data hosting restrictable" ;
				  sh:description "Can the hosting of customer data be restricted to a specific location?" ;
				  skos:example "'No statement', 'No restriction', 'Restriction to a region', 'Restriction to the EU', 'Restriction to Germany'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path trusted-cloud:customDataAdminstrationRestrictable ;
				  sh:name "custom data adminstration restrictable" ;
				  sh:description "Can the administration of customer data be restricted to a specific location?" ;
				  skos:example "'No statement', 'No restriction', 'Restriction to a region', 'Restriction to the EU', 'Restriction to Germany'" ;
				  sh:order 2 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path trusted-cloud:geoRegionOptions ;
				  sh:name "geo region options" ;
				  sh:description "Detailed information for options of GEO-regions." ;
				  skos:example "'Freetext'" ;
				  sh:order 3 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
.

gax-validation:GdprComplianceShape
	a sh:NodeShape ;
	sh:targetClass trusted-cloud:GdprCompliance ;
	sh:property [ sh:path trusted-cloud:gdprFullfiled ;
				  sh:name "gdpr fullfiled" ;
				  sh:description "How are the formal requirements specified by GDPR fulfilled?" ;
				  skos:example "'No statement', 'Requirements are fulfilled', 'Measurements for fullfillment are documented in the contract', 'Measurements for fullfillment are documented publicly', 'Measurements for fullfillment are evident by a certificate'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path trusted-cloud:opdContracted ;
				  sh:name "opd contracted" ;
				  sh:description "How are an office of data privacy contact or legal act agreed with the client based in thge EU GDPR requirements?" ;
				  skos:example "'No statement', 'No contract', 'Written contract', 'Written/electronic contract is offer on demand acc. to Art. 28 GDPR', 'Written/ electronic contract is offerd in accordance with Art. 28 GDPR.'" ;
				  sh:order 2 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path trusted-cloud:dpdiaContracted ;
				  sh:name "dpdia contracted" ;
				  sh:description "Is the suport of the controller of data protection impact addessment (DPIA) contractually agreed, in case this is necessary for the client? (e.g. Date processing on a large scale', 'data transfer outside the EU', etc)." ;
				  skos:example "'true', 'false'" ;
				  sh:order 3 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:boolean ] ;
	sh:property [ sh:path trusted-cloud:personalDataEncrytionContracted ;
				  sh:name "personal data encrytion contracted" ;
				  sh:description "Is there contracted pseudonymization or encryption of personal data?" ;
				  skos:example "'true', 'false'" ;
				  sh:order 4 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:boolean ] ;
	sh:property [ sh:path trusted-cloud:applicationOfDataSubjectRightsContracted ;
				  sh:name "application of data subject rights contracted" ;
				  sh:description "Is the application of data subject rigths contractually guaranteed?" ;
				  skos:example "'true', 'false'" ;
				  sh:order 5 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:boolean ] ;
	sh:property [ sh:path trusted-cloud:dataDeletionContracted ;
				  sh:name "data deletion contracted" ;
				  sh:description "Is the deletion of data including links to the relevant data and data copies in the cloud contractually assured?" ;
				  skos:example "'true', 'false'" ;
				  sh:order 6 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:boolean ] ;
	sh:property [ sh:path trusted-cloud:clientFeedbackRequired ;
				  sh:name "client feedback required" ;
				  sh:description "Does the office of data privacy contract require information from the client regarding the type of personal data as well as categories of the peronss concerns?" ;
				  skos:example "'true', 'false'" ;
				  sh:order 7 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:boolean ] ;
	sh:property [ sh:path trusted-cloud:proofs ;
				  sh:name "proofs" ;
				  sh:description "Which of the following proofs can be provided to the contractor for review by appropriate means in accordace with the office for data privacy contract?" ;
				  skos:example "'Self-audit', 'Internal rules of conduct', 'Certificate', 'Approved rules of conduct acc. to Atr. 40 GDPR', 'Certificates acc. to Art. 42 GDPR', 'Others'" ;
				  sh:order 8 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path trusted-cloud:GdprArt40 ;
				  sh:name " gdpr art40" ;
				  sh:description "Is a record of processing activities commissioned by rhe client based on Art. 30 GDPR?" ;
				  skos:example "'true', 'false'" ;
				  sh:order 9 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:boolean ] ;
.

gax-validation:GdprMeasuresShape
	a sh:NodeShape ;
	sh:targetClass trusted-cloud:GdprMeasures ;
	sh:property [ sh:path trusted-cloud:gdprMeasures ;
				  sh:name "gdpr measures" ;
				  sh:description "How adequately does the implementation of technical and organizational measures take plase by European General Data Protection Regulation (GDPR)?" ;
				  skos:example "'No statement', 'Formally described', 'Contracted', 'Certified', 'Certified and reviewed regulary'" ;
				  sh:order 1 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
	sh:property [ sh:path trusted-cloud:details ;
				  sh:name "details" ;
				  sh:description "Details about the implemented technical and organizational measurements." ;
				  skos:example "'Freetext'" ;
				  sh:order 2 ;
				  sh:minCount 1 ;
				  sh:maxCount 1 ;
				  sh:datatype xsd:string ] ;
.
