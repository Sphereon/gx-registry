@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://w3id.org/gaia-x/participant#country>
  a <http://www.w3.org/ns/shacl#NodeShape> ;
  sh:property [
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:maxLength 3 ;
    sh:minCount 1 ;
    sh:minLength 2 ;
    sh:name "Physical location in ISO 3166-1 alpha2, alpha-3 or numeric format."^^xsd:string ;
    sh:order 1 ;
    sh:path <http://w3id.org/gaia-x/participant#country>
  ] ;
  sh:targetClass <http://w3id.org/gaia-x/participant#country> .

<http://w3id.org/gaia-x/participant#legal-person>
  a sh:NodeShape ;
  sh:property [
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:maxLength 50 ;
    sh:minCount 1 ;
    sh:minLength 1 ;
    sh:name "Country's registration number which identify one specific company."^^xsd:string ;
    sh:order 1 ;
    sh:path <http://w3id.org/gaia-x/participant#registrationNumber>
  ], [
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "headquarterAddress"^^xsd:string ;
    sh:order 2 ;
    sh:path <http://w3id.org/gaia-x/participant#headquarterAddress> ;
    sh:targetNode <http://w3id.org/gaia-x/participant#country>
  ], [
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "legalAddress"^^xsd:string ;
    sh:order 3 ;
    sh:path <http://w3id.org/gaia-x/participant#legalAddress> ;
    sh:targetNode <http://w3id.org/gaia-x/participant#country>
  ], [
    sh:datatype xsd:string ;
    sh:flags "i"^^xsd:string ;
    sh:maxCount 1 ;
    sh:maxLength 20 ;
    sh:minLength 1 ;
    sh:name "Unique LEI number as defined by https://www.gleif.org."^^xsd:string ;
    sh:order 4 ;
    sh:path <http://w3id.org/gaia-x/participant#leiCode> ;
    sh:pattern "[0-9A-Z]{18}[0-9]{2}"^^xsd:string
  ], [
    sh:name "A list of direct participant that this entity is a subOrganization of, if any."^^xsd:string ;
    sh:order 5 ;
    sh:path <http://w3id.org/gaia-x/participant#parentOrganisation> ;
    sh:targetNode <http://w3id.org/gaia-x/participant#legal-person>
  ], [
    sh:name "A list of direct participant with an legal mandate on this entity, e.g., as a subsidiary."^^xsd:string ;
    sh:order 6 ;
    sh:path <http://w3id.org/gaia-x/participant#subOrganisation> ;
    sh:targetNode <http://w3id.org/gaia-x/participant#legal-person>
  ] ;
  sh:targetClass <http://w3id.org/gaia-x/participant#legal-person> .
